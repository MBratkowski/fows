<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prelegent_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prelegent_image_view"
        android:layout_width="@dimen/prelegent_item_photo_width"
        android:layout_height="@dimen/prelegent_item_photo_height"
        android:layout_marginBottom="@dimen/prelegent_item_horizontal_margin"
        android:layout_marginLeft="@dimen/prelegent_item_horizontal_margin"
        android:layout_marginStart="@dimen/prelegent_item_horizontal_margin"
        android:layout_marginTop="@dimen/prelegent_item_horizontal_margin"
        android:src="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/prelegent_item_name_margin"
        android:layout_marginTop="@dimen/prelegent_item_name_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="@dimen/prelegent_item_text_large"
        app:layout_constraintLeft_toRightOf="@+id/prelegent_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Imie" />

    <TextView
        android:id="@+id/surname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/prelegent_item_surname_margin_left"
        android:layout_marginTop="@dimen/prelegent_item_surname_margin_top"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="@dimen/prelegent_item_text_large"
        app:layout_constraintLeft_toRightOf="@+id/name_text_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nazwisko" />

    <TextView
        android:id="@+id/company_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/prelegent_item_company_margin"
        android:layout_marginLeft="@dimen/prelegent_item_company_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="@dimen/prelegent_item_text_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/prelegent_image_view"
        tools:text="Firma" />

</android.support.constraint.ConstraintLayout>