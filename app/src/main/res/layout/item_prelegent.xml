<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/prelegent_item_height"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prelegentImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/prelegent_item_right_margin"
        android:layout_marginEnd="@dimen/prelegent_item_right_margin"
        android:layout_marginLeft="@dimen/prelegent_item_right_margin"
        android:layout_marginRight="@dimen/prelegent_item_right_margin"
        android:layout_marginStart="@dimen/prelegent_item_right_margin"
        android:layout_marginTop="@dimen/prelegent_item_right_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/prelegentTextView"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="36dp"
        />

    <TextView
        android:id="@+id/prelegentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/prelegent_item_right_margin"
        android:layout_marginLeft="@dimen/prelegent_item_text_margin"
        android:layout_marginRight="@dimen/prelegent_item_right_margin"
        android:layout_marginStart="@dimen/prelegent_item_text_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="@dimen/prelegent_item_text_large"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Imie Nazwisko"
        />

    <TextView
        android:id="@+id/companyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/prelegent_item_right_margin"
        android:layout_marginRight="@dimen/prelegent_item_right_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="@dimen/prelegent_item_text_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/prelegentTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:text="Firma"
        />
</android.support.constraint.ConstraintLayout>